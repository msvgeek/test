---
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import HeroText from '~/components/widgets/HeroText.astro';

const metadata = {
  title: 'Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Services"
    title="Elevate your IT with our tailored services"
    subtitle="Explore our offerings to learn more about how we can help your business."
    actions={[{ variant: 'primary', text: 'Start exploring', href: '#services' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Services Hero Image',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
  id="services"
    title="Explore our services"
    subtitle="Pick one, pick many, it's up to you!"
    columns={3}
    items={[
      {
        title: 'Cyber Security',
        description:
          'We not only deploy multiple layers of protection to identify and neutralize current cyber threats, but we continuously monitor the security landscape to head off emerging threats. As a result, you can conduct your business without disruptionâ€”and without losing sleep.',
        icon: 'tabler:cloud-lock',
      },
      {
        title: 'Strategic IT Planning',
        description:
          'Fixing problems is one thing. Having a plan for the future and when things break is another. Seperate yourself from the pack. ',
        icon: 'tabler:activity',
      },
      {
        title: 'Managed Services',
        description: "Feeling overwhelmed trying to keep up with tech? Be the office rockstar and bring in vGeek - we provide your small business with an all-in-one IT department.",
        icon: 'tabler:network',
      },
      {
        title: 'IT Consulting',
        description:
          "Finding the right technology for your business requires a long-term IT strategy and plan. Our team of IT Consultants drive industry best practices, helping you identify weaknesses and opportunities to maximize technology within your business.",
        icon: 'tabler:contract',
      },
      {
        title: 'Data Protection',
        description:
          'With attention to typography, these templates empower effective content presentation for writers at any stage, ensuring visually engaging and user-friendly blogs.',
        icon: 'tabler:lock-password',
      },
      {
        title: 'Co-Managed IT',
        description:
          "IT Augmentation for your team. Scale your IT team quickly and effortlessly.",
        icon: 'tabler:user-star',
      },
    ]}
  />

  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <ContactUs
    id="form"
    title="Drop us a message today!"
    subtitle="Get in touch to find out more about vGeek and how we can help enable your organization with superior support, cybersecurity, cloud services and compliance."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="Our support team typically responds within 2 business hours."
  />
</Layout>
