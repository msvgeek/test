---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'vGeek â€” IT for Humans',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero2
  tagline="vGeek Technology Consulting"
  title="Simplify & Secure IT"
  subtitle="Ready to focus on your business again?"
  actions={[
    { variant: 'primary', text: 'Get Connected ', href: '#', icon: 'tabler:plug-connected' },
    { text: 'Learn more', href: '#' },
  ]}
  image={{ src: '~/assets/images/hero-image.png', alt: 'vGeek Hero Image' }}
/>
  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Why vGeek?"
    title="Focus on growing your business, not fighting technology!"
    items={[
      {
        title: 'Relentlessly Caring.',
        description:
          'Your goals become ours.',
      },
      {
        title: 'Better Security',
        description:
          "Staying secure is tough. We've got your back.",
      },
      {
        title: '90-Day Guarantee',
        description:
          "If you don't love us, we'll help your transtition to a new support firm.",
      },
      {
        title: 'Tailored Approach',
        description:
          "As part of your custom-built plan, you'll benefits from a range of our services.",
      },
    ]}
    image={{ src: '~/assets/images/118-macbook.png', alt: 'Macbook image' }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Building simple, secure IT solutions</h3>
      Gain a competitive advantage by partnering with vGeek.
    </Fragment>
    
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'People first!',
        description: "Proactive, strategic, people first approach to evaluating your IT needs.",
      },
      {
        title: 'Right-sized IT solutions.',
        description:
          "IT solutions built around your needs, not some bundle.",
      },
      {
        title: 'No catch, no gimmick...',
        description:
          "...just experience and best practices we've honed over the years to make our services work for you.",
      },
      {
        title: 'Positive technology experience.',
        description:
          "We believe that technology should bring about a positive experience. That problems should be dealt with efficiently to bring rocking results - for now and into the future.",
      },
    ]}
    image={{ src: '~/assets/images/day95-app-development.png', alt: 'Multiple mobile devices' }}
  >
    <Fragment slot="content">What is IT for Humans?</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="Get onboarded now!"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Contact Us!</span>',
        description:
          "Reach out to schedule a discussion about your needs.",
        icon: 'tabler:address-book',
      },
      {
        title: 'Step 2: <span class="font-medium">Discovery & Onboarding</span>',
        description:
          "We'll get into every nook and cranny of your network and build out a plan trailored for your business.",
        icon: 'tabler:clock-search',
      },
      {
        title: 'Step 3: <span class="font-medium">Relax!</span>',
        description:
          "You're in good hands now.",
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

    <!-- Features Widget *************** -->

    <Features
    id="features"
    tagline="Features"
    title="What you get with vGeek"
    subtitle="One of the most professional and comprehensive templates currently on the market. Most starred & forked Astro theme in 2022, 2023 and 2024."
    items={[
      {
        title: 'Astro + Tailwind CSS Integration',
        description:
          'A seamless integration between two great frameworks that offer high productivity, performance and versatility.',
        icon: 'tabler:brand-tailwind',
      },
      {
        title: 'Ready-to-use Components',
        description:
          'Widgets made with Tailwind CSS ready to be used in Marketing Websites, SaaS, Blogs, Personal Profiles, Small Business...',
        icon: 'tabler:components',
      },
      {
        title: 'Best Practices',
        description:
          'Creating secure, efficient, and user-friendly websites that deliver exceptional experiences and lasting value.',
        icon: 'tabler:list-check',
      },
      {
        title: 'Excellent Page Speed',
        description:
          'Having a good page speed impacts organic search ranking, improves user experience (UI/UX) and increase conversion rates.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Search Engine Optimization (SEO)',
        description:
          "SEO lies in its ability to enhance a website's visibility, driving organic traffic and enabling it to reach a wider audience.",
        icon: 'tabler:arrows-right-left',
      },
      {
        title: 'Open to new ideas and contributions',
        description:
          'Embracing a culture that is open to new ideas and contributions is integral fostering innovation, collaboration, and a dynamic user experience.',
        icon: 'tabler:bulb',
      },
    ]}
  />
  <!-- CallToAction Widget *********** -->

  <CallToAction
    <HeroText tagline="Contact" title="Let's Connect!" />

  <ContactUs
    id="form"
    title="Drop us a message today!"
    subtitle="For quicker answers, explore our FAQs section. You may find the solution you're looking  for right there! If not, our support team is delighted to help you."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="Our support team typically responds within 2 business hours."
  />
  </CallToAction>
</Layout>
