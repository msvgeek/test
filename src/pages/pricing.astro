---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import ContactUs from '~/components/widgets/Contact.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing"
    title="Stellar Pricing for Every Journey"
    subtitle="Choose the perfect plan that aligns with your goals."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Our prices"
    subtitle="Only pay for what you need"
    prices={[
            {
              title: '10 Hour Block',
              subtitle: 'Use it as you need it',
              price: 95,
              period: 'Per Hour',
              items: [
                {
                  description: 'Discount for purchasing 25-hour blocks',
                },
                {
                  description: 'Hours can be used for anything',
                },
                {
                  description: 'Monday-Friday 8AM-5PM',
                },
                {
                  description: 'Purchasing block hours does not guarantee service by a specific time',
                },
                {
                  description: 'Hours expire after 1 year',
                },
              ],
            },
            {
              title: 'Block Hours',
              subtitle: 'Use it as you need it',
              price: 85,
              period: 'Per Hour',
              items: [
                {
                  description: 'Discount for purchasing 25-hour blocks',
                },
                {
                  description: 'Hours can be used for anything',
                },
                {
                  description: 'Monday-Friday 8AM-5PM',
                },
                {
                  description: 'Purchasing block hours does not guarantee service by a specific time',
                },
                {
                  description: 'Hours expire after 1 year',
                },
              ],
            },
            {
              title: 'Fully Managed',
              subtitle: 'Optimal for businesses up to 50 users',
              price: 75,
              period: 'Per User Per Month',
              items: [
                {
                  description: 'Fully managed IT infrastructure',
                },
                {
                  description: 'Travel rates are included',
                },
                {
                  description: '24/7/365 support',
                },
                {
                  description: 'Guaranteed response and resolution times',
                },
                {
                  description: 'Servers are an additional $50 per Month',
                },
              ],
              hasRibbon: true,
              ribbonTitle: 'popular',
            },
            {
              title: 'Custom',
              subtitle: 'For businesses with over 50 users',
              price: 'xx',
              period: 'Per Month',
              items: [
                {
                  description: 'Contact us for pricing!',
                },
                {
                  description: 'Includes everything available in Fully Managed',
                },
                {
                  description: 'Plan built specifically for you',
                },
              ],
              callToAction: {
                text: 'Get a Quote',
                href: 'https://www.vgeek.guru/contact',
              },
            },
    ]}
  />
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <ContactUs
    id="form"
    title="Drop us a message today!"
    subtitle="Get in touch to find out more about vGeek and how we can help enable your organization with superior support, cybersecurity, cloud services and compliance."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="Our support team typically responds within 2 business hours."
  />
</Layout>
